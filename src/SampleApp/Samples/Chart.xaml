<UserControl x:Class="SampleApp.Samples.Chart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleApp.Samples"
             xmlns:toms="urn:TomsToolbox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
    <!-- Define the four quadrants -->
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="{Binding Q3.Width, Converter={toms:StarSizeConverter}}" MinWidth="48"/>
      <ColumnDefinition Width="{Binding Q1.Width, Converter={toms:StarSizeConverter}}" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="{Binding Q1.Height, Converter={toms:StarSizeConverter}}"/>
      <RowDefinition Height="{Binding Q3.Height, Converter={toms:StarSizeConverter}}" MinHeight="24"/>
    </Grid.RowDefinitions>
    <!-- Draw the two axes -->
    <Border Grid.Row="0" Grid.Column="1" BorderBrush="Gray" BorderThickness="2,0,0,2" Margin="-1,0,0,-1" />
    <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="0,2,2,0" Margin="0,-1,-1,0" />
    <!-- Label the axes -->
    <Grid Grid.Row="0" Grid.Column="0" Margin="4,2">
      <TextBlock Text="{Binding BoundingRect.Bottom, FallbackValue=Top}" HorizontalAlignment="Right" />
      <TextBlock Text="{Binding Origin.Y, FallbackValue=0, StringFormat={}{0:F2}}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </Grid>
    <Grid Grid.Row="1" Grid.Column="1" Margin="4">
      <TextBlock Text="{Binding Origin.X, FallbackValue=Left, StringFormat={}{0:F2}}" HorizontalAlignment="Left" />
      <TextBlock Text="{Binding BoundingRect.Right, FallbackValue=Right}" HorizontalAlignment="Right" />
    </Grid>
    <Grid Grid.Row="1" Grid.Column="0" Margin="4,2">
      <TextBlock Text="{Binding BoundingRect.Top, FallbackValue=Bottom}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </Grid>
    <!-- Define the chart -->
    <Grid Grid.Row="0" Grid.Column="1">
      <!-- Invert Y axis to get a math coordinate system -->
      <FrameworkElement.LayoutTransform>
        <ScaleTransform ScaleX="1" ScaleY="-1" />
      </FrameworkElement.LayoutTransform>
      <!-- Define our world coordinates that scales into Q1 -->
      <Viewbox Stretch="Fill">
        <Grid x:Name="World"
              Width="{Binding Q1.Width}"
              Height="{Binding Q1.Height}">
          <Grid.RenderTransform>
            <TranslateTransform
              X="{Binding Origin.X, Converter={x:Static toms:UnaryOperationConverter.Negation}}"
              Y="{Binding Origin.Y, Converter={x:Static toms:UnaryOperationConverter.Negation}}" />
          </Grid.RenderTransform>
        </Grid>
      </Viewbox>
      <Grid>
        <!-- Draw all lines in world coordinates -->
        <ItemsControl ItemsSource="{Binding Lines}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <toms:ViewportCanvas World="{Binding ElementName=World}">
                <Polyline toms:Polyline.DataPoints="{Binding Points}"
                          Stroke="{Binding Color}"
                          StrokeThickness="2"
                          StrokeDashArray="2 2" MinHeight="2" MinWidth="2"/>
              </toms:ViewportCanvas>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <Grid />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>
        <!-- Draw all points in world coordinates -->
        <ItemsControl ItemsSource="{Binding Points}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <toms:ViewportCanvas World="{Binding ElementName=World}" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemContainerStyle>
            <Style TargetType="ContentPresenter">
              <Setter Property="toms:CanvasAnchor.TopLeft" Value="{Binding (local:DataPoint.Position)}" />
            </Style>
          </ItemsControl.ItemContainerStyle>
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <StackPanel>
                <FrameworkElement.RenderTransform>
                  <TransformGroup>
                    <!-- Center is the center of the ellipse-->
                    <TranslateTransform X="-2" Y="-2" />
                    <!-- Reverse the Y axis inversion -->
                    <ScaleTransform ScaleY="-1" />
                  </TransformGroup>
                </FrameworkElement.RenderTransform>
                <Ellipse Height="4" Width="4" Fill="{Binding Color}" HorizontalAlignment="Left"/>
                <TextBlock Text="{Binding Label}" />
              </StackPanel>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
